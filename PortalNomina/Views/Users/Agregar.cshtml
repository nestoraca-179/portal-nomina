@{
    ViewBag.Title = "Agregar";
}

<div class="container-page">
    <div class="row mx-0 my-3">
        <div class="col">
            <h2 class="text-center">Agregar</h2>
        </div>
    </div>
    <form action="/Users/ProcessAgregar" method="post" class="w-50">
        <div class="form-group">
            <label>Nombre</label>
            <input type="text" name="name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Usuario</label>
            <input type="text" name="user" class="form-control" />
        </div>
        <div class="form-group my-3">
            <label>Clave</label>
            <input type="password" name="pass" class="form-control" />
        </div>
        <div class="form-check">
            <input type="checkbox" name="active" class="form-check-input" checked>
            <label class="form-check-label">Activo</label>
        </div>
        <div class="form-check my-3">
            <input type="checkbox" name="admin" class="form-check-input">
            <label class="form-check-label">Administrador</label>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Agregar</button>
    </form>
</div>