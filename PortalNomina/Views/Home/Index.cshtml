@{
    ViewBag.Title = "Inicio de Sesión";
}
<style>
    header, footer {
        display: none;
    }
    .menu {
        display: none;
    }
    .banner {
        width: 100% !important;
        padding: 0 !important;
    }
</style>
<div class="container-fluid main-container">
    <div class="container">
        <form action="/Account/Login" method="post">
            <h2 class="text-center my-4">Login</h2>
            <input type="text" name="user" class="mt-3 w-75" />
            <input type="password" name="pass" class="mt-3 w-75" />
            <button type="submit" class="btn btn-primary mt-5 w-75">Login</button>
        </form>
    </div>
</div>